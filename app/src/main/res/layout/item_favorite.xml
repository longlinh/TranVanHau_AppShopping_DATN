<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="190dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_margin="5sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/imgFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/iphone14" />
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:lottie_loop="true"
                    android:id="@+id/imgLove"
                    android:layout_alignParentEnd="true"
                    app:lottie_autoPlay="true"
                    app:lottie_repeatMode="reverse"
                    app:lottie_rawRes="@raw/favorite"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[Mã AP1 giảm 5% tối đa 500k] Apple iphone 14 pro max 512GB"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:id="@+id/txtNameFav"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:id="@+id/txtPriceFavOld"
                    android:background="@drawable/line_textview"
                    android:text="27.990.000đ"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:id="@+id/txtPriceFavNew"
                        android:text="25.990.000đ"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã bán 150"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:id="@+id/txtSelledFav"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5sp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>